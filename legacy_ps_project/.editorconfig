root = true

[*]
max_line_length = 160
charset = utf-8
end_of_line = lf
insert_final_newline = false
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.go]
indent_size = 4
indent_style = space

[*.yml]
indent_size = 4
indent_style = tab

[*.md]
indent_style = space

[Makefile]
indent_size = 3
indent_style = tab
